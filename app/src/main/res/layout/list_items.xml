<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCard"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/monitorImageView"
            android:layout_width="83dp"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher"

            />

        <TextView
            android:id="@+id/namemonitor"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/monitorImageView"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/monitorImageView"
            android:layout_toRightOf="@+id/monitorImageView"
            />


        <TextView
            android:id="@+id/peticionmonitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monitorImageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_toEndOf="@+id/monitorImageView"
            android:layout_toRightOf="@+id/monitorImageView" />


    </RelativeLayout>

</android.support.v7.widget.CardView>